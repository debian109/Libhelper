<?xml version="1.0" encoding="utf-8"?>
<UIHelper.PullToZoom.PullZoomView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pzv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/recycler_helper_include_header" />

        <UIHelper.RecyclerViewHelper.widget.MultiChoiceRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="content"
            android:numColumns="auto_fit" />
    </LinearLayout>

</UIHelper.PullToZoom.PullZoomView>